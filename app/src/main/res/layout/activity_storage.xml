<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StorageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Internal Storage(Text)"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/b_save_int"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Save Internal" />

        <Button
            android:id="@+id/b_read_int"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read Internal" />

        <Button
            android:id="@+id/b_delete_int"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Internal"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="External Storage(Text)"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/b_save_ext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Save External" />

        <Button
            android:id="@+id/b_read_ext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read External" />

        <Button
            android:id="@+id/b_delete_ext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete External"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Save Photo in Internal or External"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/b_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Take Photo" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>